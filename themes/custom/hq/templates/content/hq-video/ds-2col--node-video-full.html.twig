{%
set classes = [
'node',
'node--type-' ~ node.bundle|clean_class,
view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
]
%}

{% if is_rtl %}
  {{ attach_library('hq/node.full.ct-video-rtl') }}
{% else %}
  {{ attach_library('hq/node.full.ct-video') }}
{% endif %}
<article {{ attributes.addClass(classes) }}>
  {% block node %}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
          <header class="story-header">
            {% if content.multimedia_tag|render|trim  %}
              <div class="story-tag">{{ content.multimedia_tag }}</div>
            {% endif %}
            <h1 class="story-title">{{content.title}}</h1>
            <div class="story-author-date">{{content.field_story_publication_date.0}}</div>
            {{ drupal_block("social_sharing_buttons_block") }}
          </header>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-md-10">
          <div class="video__block" >
              {{ content.field_media_remote_video }}
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 mb-130">
          {{ content.body }}
          {% if content.field_watch_more %}
            {{ content.field_watch_more }}
          {% endif %}
        </div>
      </div>
      {% if content.video_tags|length > 1 %}
        <div class="row">
          <div class="col-12">
            <div class="video__block">
              <div class="block related-topics">
                <h2>{{ "Topics"|t}}</h2>
                <ul>
                  {% for item in content.video_tags %}
                    {% if item|length %}
                      <li>{{ item }}</li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
      {{ content.field_builder }}
    </div>
  {% endblock %}
</article>
