{% if is_rtl %}
  {{ attach_library('hq/block.topic-hierarchical-navigation-rtl') }}
	{{ attach_library('hq/block.quicktabs.latest-resources-rtl') }}
{% else %}
  {{ attach_library('hq/block.topic-hierarchical-navigation') }}
	{{ attach_library('hq/block.quicktabs.latest-resources') }}
{% endif %}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
<article{{attributes.addClass(classes)}}>
	{% block node %}
		{% set basicHeroBanner = null %}

		{% if content.field_hero_banner|render|length %}
			{% set paragraph_type = content.field_hero_banner.0['#paragraph'] %}
			{% if paragraph_type.field_select_hero_type.0.value|trim ==  'basic_hero_banner' %}
				{% set basicHeroBanner = true %}
			{% endif %}
			{% if basicHeroBanner == null %}
				<div class="container-fluid mb-60">
					<div class="row">
						<div class="hq-hero-banner__wrapper">
							{{content.field_hero_banner}}
						</div>
					</div>
				</div>
			{% endif %}
		{% endif %}

		{% if content.field_hero_banner|render|length == 0 or basicHeroBanner %}
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-lg-8">
						<header class="story-header">
							<h1 class="story-title">{{ label }}</h1>
							{{ drupal_block("social_sharing_buttons_block") }}
						</header>
					</div>
				</div>
			</div>
			{% if basicHeroBanner %}
				<div class="container-fluid mb-60">
					<div class="row">
						<div class="hq-hero-banner__wrapper no-content">
							{{content.field_hero_banner}}
						</div>
					</div>
				</div>
			{% else %}
				{% if content.field_hero_type.0['#markup'] == 'Video' %}
					<div class="embed-container">
						{{ content.field_video_hero }}
					</div>
				{% elseif content.field_hero_type.0['#markup'] == 'Image' %}
					{{ attach_library('hq/rellax_library') }}
						<figure class="story-image parallax-image">
							{{ content.field_media_image_hero }}
							{% if media_caption %}
								<div class="container">
									<div class="row">
										<div class="col-md-12">
											<figcaption class="story-caption">
												{{ media_caption }}
											</figcaption>
										</div>
									</div>
								</div>
							{% endif %}
						</figure>
				{% endif %}
			{% endif %}

		{% endif %}		
			
		<div{{content_attributes}}>
			{% if node.field_thematic_area_type.value == 'topic' %}
				<div class="container">
					<div class="row">
						<div class="col-12">
							{{ drupal_block('custom_navigation_topic_hierarchical_navigation') }}
						</div>
					</div>
				</div>
			{% endif %}

			{% if content.body.0 %}
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-md-8">
							{{ content.body }}
						</div>
					</div>
				</div>
			{% endif %}

			{{ content.field_builder }}

		</div>
		
		{% if node.field_enable_tab_component.value %}
			<div class="block-quicktabslatestresourcesbytypetabs">
				{{ drupal_block('quicktabs_block:latest_resources_by_type_tabs') }}
			</div>
		{% endif %}
	{% endblock %}
</article>
