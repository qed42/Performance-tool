{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class="container">
        {% if content.field_show.0['#markup'] == 'On' %}
          <div class="cardHighlights-header">
            {% if content.field_title.0 %}
              <h2>{{ content.field_title.0 }}</h2>
            {% endif %}
            {% if content.field_link_limited.0 %}
              <div class="more-link">
                <a  href="{{ content.field_link_limited.0['#url_title'] }}" 
                    aria-label="Go to {{ content.field_link_limited.0['#title'] }}" 
                    title="Go to {{ content.field_link_limited.0['#title'] }}">
                    {{ content.field_link_limited.0['#title'] }}
                </a>
              </div>
            {% endif %}
          </div>
        {% endif %}

        <ul class="row">
          {{ content.field_content_reference_four }}
        </ul>

        {% if content.field_show_additional.0['#markup'] == 'On'  and content.field_link_limited.0 %}
          <div class="cardHighlights-header mobile">
            {% if content.field_link_limited.0 %}
              <div class="more-link">
                <a  href="{{ content.field_link_limited.0['#url_title'] }}" 
                    aria-label="Go to {{ content.field_link_limited.0['#title'] }}" 
                    title="Go to {{ content.field_link_limited.0['#title'] }}">
                    {{ content.field_link_limited.0['#title'] }}
                </a>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
