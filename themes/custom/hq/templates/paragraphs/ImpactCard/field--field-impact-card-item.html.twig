{% set classes = [
  'field',
  'field--name-' ~ (field_name|clean_class),
  'field--type-' ~ (field_type|clean_class),
  'field--label-' ~ label_display,
  'col-md-6',
  'col-lg-4',
  'swiper-slide',
] %}

{% for item in items %}
  <div {{ item.attributes.addClass(classes, 'field__item') }}>
    {{ item.content }}
  </div>
{% endfor %}
